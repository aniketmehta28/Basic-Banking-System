            <li class="nav-item">
              <a class="nav-link" href="/transfer">Transfer</a>
            </li>
            <li class="nav-item">
              <a class="nav-link" href="/list">Customer List</a>
            </li>
          </ul>
        </div>
      </div>
    </nav>
      <!-- Table -->
  </section id="table">

  <table>
    <tr>
      <th>Account Number</th>
      <th>Name </th>
      <th>Current Balance</th>
      <th>Personal Profile</th>
    </tr>

    <%  entries.forEach(function(entry){ %>
          <tr>
        <td><%= entry.account %></td>
        <td><%= entry.name %></td>
        <td><%= entry.balance %></td>
        <td> <a href="/<%= entry.name %>"><button type="button" name="">View</button></td></a>
          </tr>
    <%  }) %>
</table>
